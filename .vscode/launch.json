{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch .NET Core (Web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/BadmintonSVB/bin/Debug/net8.0/BadmintonSVB.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Users/": "${workspaceFolder}"
            }
        }
    ]
}
